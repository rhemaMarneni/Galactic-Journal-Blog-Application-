<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Galactic Journal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/styles/main.css">
</head>
<body>
    <div class="logic-container">
        <div class="split left">
          <h1 class="login-title">Galactic Journal</h1>
          <a href="#" class="btn">Explore</a>
        </div>
        <div class="split right">
          <% if (errorMessages.length > 0) { %>
            <div class="flash-messages">
                <% errorMessages.forEach(function(message) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% }); %>
            </div>
        <% } %>
            <form action="/login" method="POST" class="login-form-container">
                <h1>Sign in</h1>
                <div class="inputbox">
                  <i class="fa fa-user"></i>
                  <input type="text" placeholder="Email" name="username" required>
                </div>
                <div class="inputbox">
                  <i class="fa fa-lock"></i>
                  <input type="password" placeholder="Password" name="password" required>
                </div>
                <button type="submit" class="btn">Sign in with Email</button>
                <div class="register">
                  <p>Don't have have an account? <a href="/register">REGISTER</a></p>
                </div>
            </form>
            <br><p>-OR-</p>
            <a class="google-signin-btn" href="/auth/google" role="button">
                <img src="https://developers.google.com/identity/images/g-logo.png">
                <p class="text-wrapper">Sign In with Google</p>
            </a>
    </div>
</body>
</html>